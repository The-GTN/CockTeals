<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tac_main_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.TAC_Main_Project">
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivityCocktails"
            android:exported="true"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar">
        </activity>
        <activity
            android:name=".activities.MainActivityMeals"
            android:exported="true"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar">
        </activity>
        <activity
            android:name=".activities.LanguageSettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar"></activity>
        <activity
            android:name=".activities.MainActivityRandom"
            android:exported="true"
            android:theme="@style/Theme.TAC_Main_Project.NoActionBar"></activity>
    </application>

</manifest>